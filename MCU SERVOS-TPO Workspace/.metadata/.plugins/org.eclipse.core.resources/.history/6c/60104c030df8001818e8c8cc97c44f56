#ifdef __USE_CMSIS
#include "LPC17xx.h"
#endif

#include <cr_section_macros.h>
#include "DR_Init.h"
#include "PR_Teclas.h"

int main(void) {
	uint8_t key;

	Kit_Init();
	LED_Set(LED_STICK, LED_STICK_OFF);

    while(1) {

    	RX_Mensajes();

    	MDE_PC_Mano();


    	key = GetKey();

    	if( key == SW1 ){
    		LED_Set(LED_STICK, LED_STICK_ON);
    	}

    	if( key == SW2 ){
    		LED_Set(LED_STICK, LED_STICK_OFF);
    	}


    }

    return 0 ;
}


static volatile estado_PC_Mano = INACTIVO;

// estado
#define INACTIVO	0

void MDE_PC_Mano( void ){

	switch( estado_PC_Mano ){

	case RESET:
		break;

	case INACTIVO:


	}

}
