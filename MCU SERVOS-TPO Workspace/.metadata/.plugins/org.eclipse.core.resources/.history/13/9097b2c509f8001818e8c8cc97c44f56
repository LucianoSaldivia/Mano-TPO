#ifdef __USE_CMSIS
#include "LPC17xx.h"
#endif

#include <cr_section_macros.h>
#include "DR_Init.h"
#include "DR_Teclas.h"

int main(void) {
	uint8_t key;

	Kit_Init();
	LED_Set(LED_STICK, ON);

    while(1) {

    	key = GetKey();

    	if( key == SW1 ){
    		LED_Set(LED_Stick, ON);
    	}

    	if( key == SW2 ){
    		LED_Set(LED_Stick, OFF);
    	}


    }

    return 0 ;
}
