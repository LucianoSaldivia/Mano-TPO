/***********************************************************************************************************************************
 *** INCLUDES
 **********************************************************************************************************************************/

#include "MDE_PC_Mano.h"

/***********************************************************************************************************************************
 *** DEFINES PRIVADOS AL MODULO
 **********************************************************************************************************************************/

// estado
#define	RESET		0
#define INACTIVE	1
#define	ACTIVE		2

/***********************************************************************************************************************************
 *** MACROS PRIVADAS AL MODULO
 **********************************************************************************************************************************/

/***********************************************************************************************************************************
 *** TIPOS DE DATOS PRIVADOS AL MODULO
 **********************************************************************************************************************************/

/***********************************************************************************************************************************
 *** TABLAS PRIVADAS AL MODULO
 **********************************************************************************************************************************/

/***********************************************************************************************************************************
 *** VARIABLES GLOBALES PUBLICAS
 **********************************************************************************************************************************/

/***********************************************************************************************************************************
 *** VARIABLES GLOBALES PRIVADAS AL MODULO
 **********************************************************************************************************************************/

static volatile estado_PC_Mano = INACTIVE;

/***********************************************************************************************************************************
 *** PROTOTIPO DE FUNCIONES PRIVADAS AL MODULO
 **********************************************************************************************************************************/

 /***********************************************************************************************************************************
 *** FUNCIONES PRIVADAS AL MODULO
 **********************************************************************************************************************************/

 /***********************************************************************************************************************************
 *** FUNCIONES GLOBALES AL MODULO
 **********************************************************************************************************************************/

void MDE_PC_Mano( void ){

	switch( estado_PC_Mano ){

	case RESET:

		break;

	case INACTIVE:
		// caso: comando para comenzar el mode PC-Mano
		if( command == MODO_PC_MANO_START ){
			estado_PC_Mano = ACTIVE;
		}
		break;

	case ACTIVE:
		// caso: comando para detener el modo PC-Mano
		if( command == MODO_PC_MANO_STOP ){
			estado_PC_Mano = INACTIVE;
		}
		break;

	}

}
